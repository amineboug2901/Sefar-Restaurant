            <div class="product-info">
                <h4 class="product-name">{{this.nom}}</h4>
                <p class="product-price">{{this.prix}} $</p>
                    <button id="{{this.id_produit}}" class="ajouter" data-nom="{{this.nom}}">Ajouter au panier</button>

